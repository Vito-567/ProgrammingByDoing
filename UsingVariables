public class UsingVariables
{
    public static void main( String[] args )
    {
        String className;
        int classNumber;
        double e;
          
        e = 2.71828;
        classNumber = 113;
        className = "Computer Scinece";

        System.out.println( "Let's talk about " +classNumber+ "." );
        System.out.println( "e is close to  " +e+ "." );
        System.out.println( "This class is about" +className+ "." );

    }
}